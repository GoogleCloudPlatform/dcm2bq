{
  "name": "dcm2bq",
  "version": "1.0.51",
  "description": "Get the JSON representation of a DICOM part 10 file and store it into BQ.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "mocha --colors --bail --timeout 30000",
    "release": "release-it --ci",
    "release-dryrun": "release-it --verbose --dry-run --ci"
  },
  "bin": {
    "dcm2bq": "index.js"
  },
  "author": "Jason Klotzer",
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/bigquery": "^7.9.1",
    "@google-cloud/pubsub": "^4.9.0",
    "@google-cloud/storage": "^7.14.0",
    "ajv": "^8.17.1",
    "commander": "^12.1.0",
    "dicom-parser": "^1.8.21",
    "express": "^4.21.2",
    "express-json-validator-middleware": "^3.0.1",
    "google-auth-library": "^9.15.0"
  },
  "devDependencies": {
    "axios": "^1.7.9",
    "glob": "^11.0.0",
    "mocha": "^10.8.2",
    "release-it": "^17.10.0"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm test"
      ],
      "after:release": [
        "docker build . --tag ${repo.repository}:latest --tag ${repo.repository}:${version} --no-cache",
        "docker push ${repo.repository} --all-tags"
      ]
    }
  }
}
